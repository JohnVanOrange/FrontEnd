{% extends "base.twig" %}

{% block stylesheets %}
 <link rel='stylesheet' type='text/css' media='screen' href='{{ web_root }}css/{{ site_theme }}/image.css' />
{% endblock %}

{% block content %}

	<section id='img_container' itemscope itemtype="http://schema.org/ImageObject">
		<a id='main' class='next-image' href='/rand?{{ rand }}' rel='nofollow'>
			<img id="{{ image.uid }}" class="main" alt='Main Image' src='{%if image.brazzify_url %}{{ image.brazzify_url }}{% else %}{{ image.media.primary.url }}{% endif %}' height='{{ image.media.primary.height }}' width='{{ image.media.primary.width }}' itemprop='contentUrl' />
		</a>
		<div id="image_footer">
			<button id='report_image' title='Report Image' class='icon link' href="#reportDialog" data-dialog="report"><span class='fa fa-flag'></span>Report image</button>
			<div class="dropdown">
				<button id="image_tools" type="button" class="x-small" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false">
					<span class='fa fa-cog'></span>
					<span class="caret"></span>
				</button>
				<ul class="dropdown-menu" role="menu" aria-labelledby="image_tools">
					<li><a id='googlesearch' href='http://www.google.com/searchbyimage?image_url={{ image.media.primary.url }}'><span class='fa fa-google'></span>Search using Google</a></li>
					<li><a id='tineye' href='http://tineye.com/search?url={{ image.media.primary.url }}'><span class='fa fa-search'></span>Search using Tineye</a></li>
					<li><a href='/info/{{ image.uid }}'><span class='fa fa-info-circle'></span>Details</a></li>
					<li><a id='fullscreen' href='{{ image.media.primary.url }}'><span class='fa fa-arrows-alt'></span>View Fullscreen</a></li>
					{% if can_remove %}<li><a id='remove_image' href="#removeImageDialog" data-dialog="remove_image"><span class='fa fa-trash'></span>Remove Image</a></li>{% endif %}
					{% if is_admin %}<li><a id='admin_link' href='/admin/image/{{ image.uid }}'><span class='fa fa-cog'></span>Image Admin</a></li>{% endif %}
				</ul>
			</div>
		</div>
	</section>


	<div id="image_icons">
		<div id='dislike_image' class='like icon fa fa-flip-horizontal fa-thumbs-down{% if image.data.dislike %} highlight{% endif %}' title='Dislike Image'></div>
		<div id='save_image' class='like icon fa fa-heart{% if image.saved %} highlight{% endif %}' title='Favorite Image'></div>
		<div id='like_image' class='like icon fa fa-thumbs-up{% if image.data.like %} highlight{% endif %}' title='{Like Image'></div>
	</div>

	<section>
		<div id='tag_container'></div>
		<button class='primary' id='add_tag' href="#addTagDialog" data-dialog="add_tag"><span class='fa fa-plus-circle'></span>Add Tag</button>
	</section>

	{% if show_social == 1%}
	<div id='social'>
		<div id='facebook_like' class="fb-like" data-send="true" data-layout="button_count" data-show-faces="false" data-colorscheme="dark"></div>
		<div id='pintrest'><a href="http://pinterest.com/pin/create/button/?url={{ image.page_url|url_encode }}&amp;media={{ image.media.primary.url|url_encode }}" class="pin-it-button" count-layout="horizontal"><img src="//assets.pinterest.com/images/PinExt.png" title="Pin It" alt='Pin It' /></a></div>
		<div class="g-plusone" data-size="medium"></div>
	</div>
	{% endif %}


	{% if tip %}
	<div class="row">
		<div class="alert alert-info col-md-4 col-md-offset-4"><span class="fa fa-info-circle fa-2x"></span> {{ tip|raw }}</div>
	</div>
	{% endif %}

	<script>
		{% if image.tags.0 %}
			var tags = {{ image.tags|json_encode|raw }};
		{% else %}
			var tags = {};
		{% endif %}
	</script>

	<script type="text/template" id="tagList">
		<% if ( !_.isUndefined(tags.length) ) { %>
			<% _.each(tags, function( tag ) { %>
				<span class='tag_wrap'><a class='tag' href='<%= tag.url %>'><%= tag.name %></a></span>
			<% }) %>
		<% } else { %>
			<em class="notag">No current tags</em>
		<% } %>
	</script>

{% endblock %}

{% block meta_data %}
	<link rel='image_src' href='{{ image.media.primary.url }}'>
	<meta property='og:image' content='{{ image.media.primary.url }}'>
	<meta name='og:image:width' content='{{ image.media.primary.width }}'>
	<meta name='og:image:height' content='{{ image.media.primary.height }}'>
	<meta property='og:type' content='website'>
	<meta property='og:title' content='{{ image.page_title|e }}'>
	<meta property='og:description' content=''>
	<meta property="og:url" content="{{ current_url }}">

	<meta property="fb:admins" content="503316760">
	{% if fb_app_id %}<meta property="fb:app_id" content="{{ fb_app_id }}">{% endif %}

	<meta name="twitter:card" content="photo">
	<meta name='twitter:title' content='{{ image.page_title|e }}'>
	<meta name='twitter:image' content='{{ image.media.primary.url }}'>
	<meta name='twitter:image:width' content='{{ image.media.primary.width }}'>
	<meta name='twitter:image:height' content='{{ image.media.primary.height }}'>
{% endblock %}

{% block javascript %}
	<script src="{{ web_root }}js/display.js"></script>
{% endblock %}
