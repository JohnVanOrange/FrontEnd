{% extends "base.twig" %}

{% block content %}

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <p>{% trans 'To get started, click the button!' %}</p>
    <a id='main' href='/rand?{{ rand }}' class="btn btn-primary btn-lg active">{% trans 'View Random Image' %}</a>
  </div>
</div>

<div class="row">
  <h3 class="col-md-4 col-md-offset-4">{% trans "What's Hot" %}</h3>
</div>
<div class="row">
  {% for image in recent_likes %}
   <div class='thumb_wrap col-md-1 col-xs-1'>
      <a href="{{ image.page_url }}"><img src="{{ image.media.thumb.url }}"></a>
   </div>
  {% endfor %}
</div>
<div class='row'>
    <div class="col-md-1 col-md-offset-11">
        <a href='recent_likes' class='more'>{% trans 'More' %}&#8230;</a>
    </div>
</div>

<div class="row">
  <h3 class="col-md-4 col-md-offset-4">{% trans 'Just Added' %}</h3>
</div>
<div class="row">
  {% for image in recent %}
   <div class='thumb_wrap col-md-1 col-xs-1'>
      <a href="{{ image.page_url }}"><img src="{{ image.media.thumb.url }}"></a>
   </div>
  {% endfor %}
</div>
<div class='row'>
    <div class="col-md-1 col-md-offset-11">
        <a href='recent_uploads' class='more'>{% trans 'More' %}&#8230;</a>
    </div>
</div>

<div class="row">
  <h5 class="col-md-4 col-md-offset-4">{% trans 'Additional Links' %}</h5>
</div>
<div class="row">
  <div class="col-md-12">
    <ul class="nav nav-pills nav-justified">
      <li><a href="tags" class='icon-cloud'>{% trans 'Tag Cloud' %}</a></li>
      <li><a href="docs" class='icon-doc-alt'>{% trans 'API Docs' %}</a></li>
      <li><a href='https://github.com/JohnVanOrange/FrontEnd/issues/new' class='icon-github'>{% trans 'Suggestions/Bugs' %}</a></li>
    </ul>
  </div>
</div>

{% endblock %}