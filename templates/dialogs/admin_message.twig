<div class="modal fade" id="adminMessageDialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">{% trans 'Send Message to Admin' %}</h4>
      </div>
      <div class="modal-body">
       <p>Have any suggestions or issues with this site?</p>
        <form class="form-horizontal">
          <div class="form-group">
            <label for="messageName" class="col-lg-2 control-label">{% trans 'Name' %}</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" id="messageName" placeholder="{% trans 'Your Name' %}">
            </div>
          </div>
          <div class="form-group">
            <label for="messageEmail" class="col-lg-2 control-label">{% trans 'Email' %}</label>
            <div class="col-lg-10">
              <input type="email" class="form-control" id="messageEmail" placeholder="{% trans 'Your Email' %}">
            </div>
          </div>
          <div class="form-group">
            <label for="messageText" class="col-lg-2 control-label">{% trans 'Message' %}</label>
            <div class="col-lg-10">
              <textarea class="form-control" id="messageText" placeholder="{% trans 'Message' %}"></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{% trans 'Close' %}</button>
        <button type="button" class="btn btn-primary submit">{% trans 'Send Message' %}</button>
      </div>
    </div>
  </div>
</div>
