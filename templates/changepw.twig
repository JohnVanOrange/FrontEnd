{% extends "base.twig" %}

{% block content %}
<h2>Change Password</h2>
<div class='row'>
	<form action='form2api' method='post' class="form-horizontal col-md-6 col-md-offset-3">
		<input type='hidden' name='method' value='user/changepw'>
		<input type='hidden' name='auth' value='{{ auth }}'>
		<input type='hidden' name='type' value='{{ type }}'>
		<div class="form-group">
			<label for="pwresetPassword" class="col-lg-2 control-label">Password</label>
			<div class="col-lg-10">
				<input type="password" class="form-control" id="password" name='password' placeholder="Password" required>
			</div>
		</div>
		<div class="form-group">
			<label for="pwresetPasswordConfirm" class="col-lg-2 control-label">Confirm Password</label>
			<div class="col-lg-10">
				<input type="password" class="form-control" id="passwordConfirm" placeholder="Confirm Password" required>
			</div>
		</div>
		<input type='submit' class='primary button' value='Change Password'>
	</form>
</div>
{% endblock %}

{% block javascript %}
	<script src='{{ web_root }}js/changepw.js'></script>
{% endblock %}