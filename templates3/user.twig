{% extends "base.twig" %}

{% block title_prepend %}{{ title_text }} {% endblock %}

{% block content %}
	<h1>Profile for {{ profile.username }}</h1>
	
	<div id='content'>
	 
	<div id='profile_image'>
	 <img src='http://www.gravatar.com/avatar/{{ profile.email_hash }}?s=300&d=retro&r=pg' alt='Profile image for {{ profile.username }}'>
	 {% if profile.id == user.id %}<p><a href='http://gravatar.com'>Update Profile Image with Gravatar</a></p>{% endif %}
	</div>
	{% if profile.id == user.id %}
	<p><a href='/s/{{ profile.username }}'>View your saved images</a></p>
	<p><a href='/uploads/{{ profile.username }}'>View your uploaded images</a></p>
	{% endif %}
	
	</div>
{% endblock %}