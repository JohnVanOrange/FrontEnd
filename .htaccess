#Protect inc files from being read
<FilesMatch "\.(inc)$">
 Order Allow,Deny
 Deny from all
</FilesMatch>

<IfModule mod_deflate.c>
 AddOutputFilterByType DEFLATE text/html text/css application/javascript
</IfModule>

DirectoryIndex pages/random.php

RewriteEngine On
Options +FollowSymlinks

RewriteRule ^display/(.*)$ pages/display.php?image=$1 [L]
RewriteRule ^brazzify/(.*)$ pages/display.php?image=$1&brazzify [L]
RewriteRule ^random$ pages/random.php [L]
RewriteRule ^error/(.*)$ pages/error.php?number=$1 [L]

ErrorDocument 403 /error/403
ErrorDocument 404 /error/404
